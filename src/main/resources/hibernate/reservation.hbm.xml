<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="domain">

    <class name="Reservation" table="Reservation">
        <id name="id" column="Id" type="int">
            <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator"/>
        </id>
        <property name = "nr_tickets" column = "Nr_tickets" type = "int"/>
        <many-to-one name="spectator" class="Spectator"
                     column="spectator_id" not-null="true"
                     cascade="all" />
        <many-to-one name="spot" class="Spot"
                     column="spot_id" not-null="true"
                     cascade="all" />

    </class>

</hibernate-mapping>
